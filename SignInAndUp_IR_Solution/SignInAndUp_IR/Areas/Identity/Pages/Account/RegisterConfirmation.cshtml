@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Please check your email";
}

<h1>@ViewData["Title"]</h1>
@{
    if (!string.IsNullOrEmpty(Model.LoginProvider))
    {
        <br />

        <a class="btn btn-danger" href="@Model.EmailConfirmationUrl">  Later, login now! </a>

        <br />
        <br />
        <hr />

        <p style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; margin-bottom:0px">
            An auto-generated password was sent to 
            <span style="font-style:italic; font-weight:500">@Model.Email</span>.
        </p>
        <p style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">
            Use it for future logins should @Model.LoginProvider won't work.
        </p>
    }
    else
    {
        <h1>
            and confirm your account.
        </h1>
    }
}
