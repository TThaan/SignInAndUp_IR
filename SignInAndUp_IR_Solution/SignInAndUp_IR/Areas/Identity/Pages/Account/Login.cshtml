@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "../_IdentityLayout.cshtml";
}

<br />

@* style="background-color:lemonchiffon", ta: khaki, indian, ivory, darkslategray.. *@
<div class="row justify-content-center">
    <div class="col-md-8 col-md-offset-2">
        <section>
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                <div>
                    <p>
                        @foreach (var provider in Model.ExternalLogins)
                        {
                            <button type="submit" class="btn btn-primary btn-block" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                        }
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

<hr style="margin-top:0" />

<div class="row">
    <div class="col-md-8 offset-md-2">
        <section>

            <div class="login-form-icon text-center">
                <i class="fas fa-user-circle fa-9x text-secondary"></i> @* style="border-radius:190px; background-color:indianred"*@
            </div>

            <form id="account" method="post">

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                </div>
                @*<div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>*@
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>

@*<hr />*@

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
