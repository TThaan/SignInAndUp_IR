@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="row">
    <div id="mobileView" class="col-md-6 offset-md-2">
        @*  style="background-color:wheat" *@

        @* or this as mobile view *@
        <div class="card login-logout-tab" style="background-color:lemonchiffon">
            <div class="card-header" style="background-color:khaki; width:100%">

                @* Mobile Menu here? *@
                <h2 class="text-center" style="margin-bottom: 10px">Manage your account</h2>

                <ul class="nav nav-tabs card-header-tabs flex-nowrap">
                    <li class="nav-item">
                        <a class="nav-link" style="font-size:medium" id="profile" asp-page="./Name">Name</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="font-size:medium" id="email" asp-page="./Email">Mail</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="font-size:medium" id="change-password" asp-page="./ChangePassword">Keys</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link flex-nowrap" style="font-size:medium" id="personal-data" asp-page="./PersonalData">Kill!</a>
                    </li>
                </ul>
            </div>
            <div class="card-content" style="padding:5% 0% 5% 10%">
                @RenderBody()
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
    <script>highlightActiveTab();</script>
}
